<div class="container-fluid bg-warning">
  <div class="row text-center">
    <div class="col-12">
      <img class="mt-3 mb-3" style="width: 10rem; height: 10rem;" src="/assets/burger.png" alt="hamburger">
      <h1 class="text-danger mb-3">Eat-Da-Burger!</h1>
    </div>
  </div>
  <div class="row mb-1 justify-content-md-center">
    <div class="col-md-4">
      <h5>Burgers To Devour!</h5>
      <ul class="list-group">
        {{#each burgers}}
          {{#unless devoured}}
            <li class="list-group-item">
              <p style="display: inline-block;">
                {{this.id}}. {{this.burger_name}}
              </p>
              <button type="button" class="btn btn-light btn-sm change-devoured border-dark" data-id="{{this.id}}" data-newdevoured="{{devoured}}">
                {{#if devoured}}DEVOURED!{{else}}Devour It!{{/if}}
              </button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-4">
      <h5>Devoured Burgers!</h5>
      <ul class="list-group">
        {{#each burgers}}
          {{#if devoured}}
            <li class="list-group-item">
              <p>
                {{this.id}}. {{this.burger_name}}
              </p>  
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="form-row text-center">
    <div class="col">
      <form class="create-form">
        <div class="mb-3">
          <div id="textHelp" class="form-text text-center text-dark">Enter a burger you want to eat! Click the "Submit" button.</div>
          <input type="text" class="form-control-lg mx-auto" style="width:35%;" id="ca" name="burger_name">          
        </div>
        <button type="submit" class="btn btn-danger border-dark mb-5">Submit</button>
      </form>
    </div>
  </div>
</div>
