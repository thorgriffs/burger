<div class="container-fluid bg-warning text-center">
  <div class="row">
    <div class="col-12">
      <img class="mt-3 mb-3" style="width: 10rem; height: 10rem;" src="/assets/burger.png" alt="hamburger">
      <h1 class="text-danger mb-5">Eat-Da-Burger!</h1>
    </div>
  </div>
  <div class="row mb-1">
    <div class="col-md-6 text-left">
      <h4>Burgers To Devour!</h4>
      <ul class="list-unstyled text-left">
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              <p class="text-left mr-5" style="display:inline-block;">
                {{this.id}}. {{this.burger_name}}
              </p>
              <button type="button" class="btn btn-light btn-sm change-devoured border-dark" data-id="{{this.id}}" data-newdevoured="{{devoured}}">
                {{#if devoured}}DEVOURED!{{else}}Devour It!{{/if}}
              </button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h5>Devoured Burgers!</h5>
      <ul class="list-unstyled">
        {{#each burgers}}
          {{#if devoured}}
            <li>
              <p class="text-left mr-5">
                {{this.id}}. {{this.burger_name}}
              </p>  
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="form-row">
    <div class="col">
      <form>
        <div class="mb-3">
          <input type="text" class="form-control-lg mx-auto" style="width:35%;" id="ca" name="burger_name">
          <div id="textHelp" class="form-text text-center text-dark">Enter a burger you want to eat! Click the "Submit" button.</div>
        </div>
        <button type="submit" class="btn btn-primary mb-5">Submit</button>
      </form>
    </div>
  </div>
</div>
